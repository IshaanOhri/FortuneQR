<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".team_reg">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="107dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="Adventurers"
        android:textColor="#FFFFFF"
        android:textSize="43dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="35dp"
        android:text="Enter your Registration Numbers."
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <android.support.v7.widget.CardView

        android:id="@+id/cardView1"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="#404040"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <EditText
            android:id="@+id/reg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@mipmap/man"
            android:hint="   Registration Number 1 "
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@null"
            android:inputType="text"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/cardView2"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="#404040"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">


        <EditText
            android:id="@+id/reg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@mipmap/man"
            android:hint="   Registration Number 2 "
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@null"
            android:inputType="text"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/cardView3"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="#404040"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/btnreg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">


        <EditText
            android:id="@+id/reg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@mipmap/man"
            android:hint="   Registration Number 3"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:inputType="text"
            />


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btnreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="43dp"
        android:background="@mipmap/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />


</android.support.constraint.ConstraintLayout>